<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.c02.bpj.client.customer.CustomerEditView">
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints prefWidth="100.0" />
          <ColumnConstraints prefWidth="200.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints prefHeight="30.0" />
          <RowConstraints prefHeight="30.0" />
          <RowConstraints prefHeight="30.0" />
          <RowConstraints prefHeight="30.0" />
        </rowConstraints>
         <children>
            <Label text="Customer Id" />
            <Label text="Vorname" GridPane.rowIndex="1" />
            <Label text="Nachname" GridPane.rowIndex="2" />
            <TextField fx:id="customerId" disable="true" GridPane.columnIndex="1" />
            <TextField fx:id="customerFirstName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="customerLastName" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Unternehmen" GridPane.rowIndex="3" />
            <TextField fx:id="companyName" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
   </center>
</BorderPane>
