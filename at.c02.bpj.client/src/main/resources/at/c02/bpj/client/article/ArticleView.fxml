<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="684.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.c02.bpj.client.article.ArticleView">
  <top>
      <GridPane fx:id="searchGridPane" alignment="TOP_CENTER" vgap="2.0" hgap="5.0">
        <columnConstraints>
          <ColumnConstraints halignment="LEFT" />
          <ColumnConstraints halignment="RIGHT" prefWidth="200"/>
        </columnConstraints>
        <rowConstraints>
          <RowConstraints  />
          <RowConstraints  />
          <RowConstraints />
          <RowConstraints  />
        </rowConstraints>
         <children>
            <Label text="ID" />
            <Label text="Name" GridPane.rowIndex="1" />
            <Label text="Kategorie" GridPane.rowIndex="2" />
            <TextField fx:id="idField" GridPane.columnIndex="1" />
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="2" maxWidth="Infinity"/>
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onSearchButtonClick" text="Suche" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
         </BorderPane.margin>
      </GridPane>
   </top>
   <center>
		<TableView fx:id="tblArticles">
			<columns>
				<TableColumn fx:id="idColumn" minWidth="-Infinity" prefWidth="115.0" text="Id" />
				<TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
				<TableColumn fx:id="priceColumn" prefWidth="75.0" text="Preis" />
            	<TableColumn fx:id="categoryColumn" prefWidth="75.0" text="Category" />
			</columns>
		</TableView>
   </center>
   
</BorderPane>
