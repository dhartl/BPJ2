<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.c02.bpj.client.article.ArticleView">
	
	
	<center>
		<TableView fx:id="tblArticles" prefHeight="200.0">
			<columns>
				<TableColumn fx:id="idColumn" prefWidth="75.0" text="Id" />
				<TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
				<TableColumn fx:id="priceColumn" prefWidth="75.0" text="Preis" />
			</columns>
		</TableView>
	</center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Artikelmanagement">
            <items>
              <MenuItem mnemonicParsing="false" text="Neu" onAction="#onNewArticleClick"/>
               <MenuItem mnemonicParsing="false" text="Bearbeiten"/>
                <MenuItem mnemonicParsing="false" text="Löschen"/>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Angebotsmanagement">
            <items>
              <MenuItem mnemonicParsing="false" text="Neu" />
               <MenuItem mnemonicParsing="false" text="Angebotsübersicht" onAction="#onOfferManagement" />
            </items>
          </Menu>

        </menus>
      </MenuBar>
   </top>
</BorderPane>
